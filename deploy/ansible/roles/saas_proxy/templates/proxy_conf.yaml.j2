#--- SATOSA Config ---#
HOST: '127.0.0.1'
PORT: {{ saas_port }}
HTTPS: Yes
PLUGIN_PATH:
  - "plugins/backends"
  - "plugins/frontends"
BACKEND_MODULES:
  - "saml2_backend"
FRONTEND_MODULES:
  - "saml2_frontend"

#--- Server Config ---#
SERVER_CERT: '{{ home_dir }}/pyff/localhost.crt'
SERVER_KEY: '{{ home_dir }}/pyff/localhost.key'
CERT_CHAIN: Null
STATIC_DIR: '/static'
LOG_FILE: 'server.log'

# Beaker session configuration
# This session can be configured to use database, file, or memory
SESSION_OPTS:
    session.type: 'memory'
    session.cookie_expires: Yes  # Expire when the session is closed
    session.auto: Yes
